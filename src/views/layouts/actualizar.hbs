{{> headers}}
{{> navegador}}
<div style="width: 100%;height: 80%;display: flex;justify-content: center;align-items: center;">
    <div
        style="display: flex;justify-content: center;justify-content: center;align-items: center;margin-top:100px;padding: 20px;border: 1px solid #e5e5e5;border-radius: 25px;">
        <form action="" method="PUT" autocomplete="on" id="formUpdate">
             <div class="bg-primary" style="width: 100%;height:30px;border-radius: 25px;">
                <h5 style="color: white;text-align: center;">Actualizar producto</h5>
            </div>
            <br>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="exampleInputPassword1">Id</label>
                    <input type="text" class="form-control" name="id" value="{{data.id}}" disabled>
                </div>
                <div class="form-group col-md-6">
                    <label for="exampleInputPassword1">Producto</label>
                    <input type="text" class="form-control" name="nombre" value="{{data.nombre}}">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="exampleInputPassword1">precio</label>
                    <input type="number" class="form-control" name="precio" value="{{data.precio}}">
                </div>
                <div class="form-group col-md-6">
                    <label for="exampleInputPassword1">Descripcion</label>
                    <input type="text" class="form-control" name="descripcion" value="{{data.descripcion}}">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="exampleInputPassword1">Codigo</label>
                    <input type="text" class="form-control" name="codigo" value="{{data.codigo}}">
                </div>
                <div class="form-group col-md-6">
                    <label for="exampleInputPassword1">Imagen</label>
                    <input type="text" class="form-control" name="foto" value="{{data.foto}}">
                </div>

            </div>
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </form>
    </div>
</div>
{{> scripts}}
<script type="application/javascript">
    sessionStorage.setItem("admin", true)
</script>